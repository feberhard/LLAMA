<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/their_message_item_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/message_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/their_message_fg_color" />

    <RadioGroup
        android:id="@+id/message_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/message_btnLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DE" />

        <RadioButton
            android:id="@+id/message_btnOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/original" />
    </RadioGroup>

    <TextView
        android:id="@+id/message_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/my_message_fg_color_sub"
        android:textAlignment="textEnd"/>
</LinearLayout>
